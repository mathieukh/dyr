<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/Widget.AppCompat.Button.Borderless"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.rm.rmswitch.RMSwitch
        android:layout_centerVertical="true"
        app:forceAspectRatio="false"
        android:id="@+id/keep_task_button"
        app:switchToggleCheckedImage="@drawable/ic_pin_white"
        app:switchToggleNotCheckedImage="@drawable/ic_pin_black"
        app:slimDesign="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_toRightOf="@+id/keep_task_button"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:id="@+id/contentPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@android:color/black"
            android:id="@+id/descriptionTaskTV"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@android:color/darker_gray"
            android:id="@+id/dateTaskTV"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
